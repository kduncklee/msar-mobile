{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@remote/*": ["./remote/*"],
      "@storage/*": ["./storage/*"],
      "@styles/*": ["./styles/*"],
      "@utility/*": ["./utility/*"]
    }
  },
  "exclude": [
    "packages/notification-service-expo-plugin/examples",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
